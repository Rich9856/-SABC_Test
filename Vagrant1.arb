Vagrant.configure("2") do |config|
  config.vm.box = "ubuntu/focal64"  
  config.vm.network "private_network", ip: "192.168.33.10"
  config.vm.hostname = "Focal64"
  config.hostmanager.enabled = true
  config.hostmanager.manage_host = true

  config.vm.provision "shell", inline: <<-SHELL
        # Mise a jour des packages
        sudo apt-get update
        sudo apt-get install -y apache2

        # Installation de Docker
        sudo apt-get install -y docker.io

        # Installation de Terraform
        sudo apt-get install -y unzip
        wget https://releases.hashicorp.com/terraform/0.15.4/terraform_0.15.4_linux_amd64.zip
        unzip terraform_0.15.4_linux_amd64.zip
        sudo mv terraform /usr/local/bin

        # Installation d'Ansible
        sudo apt-get install -y software-properties-common
        sudo apt-add-repository --yes --update ppa:ansible/ansible
        sudo apt-get install -y ansible

      # Installation de Puppet
      $script=<<EOF
      wget http://apt.puppet.com/puppet7-release-jammy.deb
      sudo dpkg -i puppet7-release-jammy.deb
      sudo apt update && sudo apt install puppet-agent
      EOF
        config.vm.box = "generic/ubuntu2204"
        config.vm.network :forwarded_port, guest: 80, host: 8080
        config.vm.provision "shell", inline: $script
        config.vm.provision :puppet do |puppet|
          puppet.module_path = "puppet/modules"
          puppet.manifests_path = "puppet/manifests"
          puppet.manifest_file  = "init.pp"
        end

  NO_PROXY = "localhost,127.0.0.1"

  config.vm.define "Ubuntu" do |machine|
    config.vm.provider "virtualbox" do |vb|
      vb.memory = 2048
      vb.cpus = 4
    end
  end

  #Dossier de synchronisation entre mon syteme local et mon systeme virtuel Linux
  config.vm.synced_folder "C:/Users/TANDA01/Documents/Vagrant_Ubuntu/vagrant_Sync", "/home/vagrant/vagrant-sync"

  config.vm.define "puppetmaster01", primary: true do |puppetmaster01|
    puppetmaster01.vm.box = "generic/ubuntu2204"
    puppetmaster01.vm.box_version = "4.2.16"
    puppetmaster01.vm.hostname = "puppetmaster01.example.com"
    puppetmaster01.vm.network "private_network", ip: "192.168.75.21"
    #puppetmaster01.vm.synced_folder "../scripts", "/scripts", type="rsync"
    # puppetmaster01.vm.synced_folder "./scripts", "/scripts" #, type="rsync"
    puppetmaster01.vm.synced_folder ".", "/vagrant", disabled: false, owner: "vagrant", group: "vagrant" #, type="rsync"
    puppetmaster01.vm.provider "virtualbox" do |vb|
      vb.name = "puppetmaster01"
      vb.cpus = 2
      vb.memory = "4096"
    end
  

  end
